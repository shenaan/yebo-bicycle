@import 'variables.styl'
@import 'mixins.styl'


@media screen and (max-width:441px)
	.hidden-sm
		display none
	.hidden-xxs
		display none
	.hidden-xs
		display none
	.menu-xs
		display flex
	.page-nav
		display none
	.page-nav.open
		top 3rem
		left 0
		width 100vw
		.page-menu
			display flex
			-webkit-flex-direction column 
			-ms-flex-direction column 
			flex-direction column 	
			background-color rgba(255,255,255,0.9)	
	.page-menu-item	
		margin-bottom 3px
		width 100vw 
		color #fff
		display flex
		justify-content center	
		&:hover a, &:active a, &:focus a
			color #fff
		&:hover, &:active, &:focus
			background-color #4d4959		
	.page-menu-item.hidden-xs
		display none
	.centered-page-wrapper
		p
			font-size 90% 
	.description-part
		padding 5%
		display: flex
		flex-direction: column
		justify-content: center	
	.icon-wrapper
		margin-bottom marginBottomSmall
	.section-heading
		margin-bottom marginBottomSmall
		font-size 0.7rem
	.subscribe
		height 300px	
		.logo-wrapper
			margin-bottom marginBottom*0.9
	.subscribe-heading
		margin-bottom marginBottom*0.9
	.bicycle-logo
		width 20% 
	.center-page-info-block
		padding 50px 0	
	.discover-btn
		width 50% 
	.subscribe-form
		min-width 50%
	.email-form,.email-submit
		height 2.5rem
	.subscribe-heading
		font-size 80% 	
	.footer
		flex-direction column	
	.address,.socials,.credits
		align-items center
		justify-content flex-start 
		margin-left 3% 
		margin-bottom 10px 
		

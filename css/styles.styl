@import 'styl/*'


/*================BASIC STYLES===============*/
html
	font-size 16px
	font-family Lato-Regular, sans-serif 
	-webkit-box-sizing border-box 
	-moz-box-sizing border-box 
	box-sizing border-box 
*, *:after, *:before
	-webkit-box-sizing inherit 
	-moz-box-sizing inherit 
	box-sizing inherit 

html,body
	margin 0
	padding 0
	width 100% 
	max-width 100%
	height 100%
	min-height 100%	
h1,h2,h3,h4
	margin: 0
	padding: 0	
li
	list-style: none
ul, ol
	padding: 0
	margin: 0
a
	text-decoration: none
img
	max-width 100%
	min-height 1px
button, input[type="button"], input[type="submit"]
	border-style none
	border-color transparent
/*================end of BASIC STYLES================*/

/*HEADER*/
.page-header
	display flex 
	// background-image url(../img/bike_1.jpg) 	
	// background url(../img/bike_1.jpg) no-repeat center center fixed
	// -webkit-background-size cover 
	// -o-background-size cover 
	// background-size cover	
	position relative
	min-width 100%
	width 100% 
.header-background
	width inherit 
	img
		width 100%
.page-nav
	min-width 50%
	position absolute
	left 25% 
	// border 1px solid yellow 
.page-menu
	// border 1px solid red
	width 100%
	display flex 
	justify-content space-around
	align-items center
.page-nav.open
	display flex	
	.page-menu
		align-items center		
.page-menu-item	
	text-transform uppercase
	-webkit-transition all 1.5s linear
	-moz-transition all 1.5s linear
	-ms-transition all 1.5s linear
	-o-transition all 1.5s linear
	transition all 1.5s linear 	
	font-family Lato-Bold
	font-size 1rem		
	a
		-webkit-transition all 1s linear
		-moz-transition all 1s linear
		-ms-transition all 1s linear
		-o-transition all 1s linear
		transition all 1s linear 
		color #4d4959		
.menu-xs
	position absolute
	right 1.5rem
	top 1.5rem
	flex-direction column
	cursor pointer 	
	span
		width 20px
		height 2px 
		background-color #FFF
		margin 2px 
/*Info block NEW GENERATION BIKE*/
.centered-page-wrapper
	max-width 80%
	margin: 0 auto
	text-align: center
	p
		font-family Lato-Regular		
		color #848789
.center-page-info-block
	display flex 	
	-webkit-flex-direction column 
	-ms-flex-direction column 
	flex-direction column 
	
	h2
		align-self: center
	p
		display inline-block
		max-width 70% 
		align-self: center 
		text-align center 
.icon-wrapper
	align-self: center
	
/* SECTION BICYCLE-COMPANY*/
.page-section
	display flex
.section-large-block
	min-width 66.66%
	position relative	
.big-image
	img
		width 100% 
.bicycle-logo
	position absolute
	top 50% 
	left 50%
	transform: translate(-50%, -50%)	
	img
		max-width 100%
.section-small-block
	min-width 33.33%
	min-height 100%	
	display: flex
	flex-direction: column
.description-part
	min-height 70%
	text-align center
	overflow hidden 
	p
		text-align justify
		color textColor		
.section-heading
	text-transform uppercase 
	font-family Lato-Bold	
	color headingColor    
		 
.small-image
	position relative
	min-height 30%
	img
		position absolute
		left 0
		bottom 0
		width 100%
.separator
	text-align center
	
/*RETRO BIKE SECTION*/
.section-middle-block
	min-width 33.33% 
	position relative
.middle-image
	img
		width 100% 
/*TEXT SECTION*/ 	
.normal-text
	text-transform none
.small-letters
	font-weight lighter 
	color textColor
	text-transform lowercase
	font-size 90% 
.italic
	font-family Lato-Italic
	color textColor
	font-style italic 
	
/*SHOP NOW SECTION*/
.shop-now
	display flex
	flex-direction row
.subsection-vertical,.subsection-horizontal
	min-height 50%
	min-width 100%
	position relative
	img
		width 100%	
		height 100% 
.subsection-vertical
	display flex
	flex-direction row	
	position relative
.subsection-vertical-small
	min-width 50%
	position relative
	img
		width 100%
		height 100% 
.subsection-vertical-large
	min-width 50%
	position relative
	img
		width 100%
		height 100%
.section-middle-vertical
	display flex
	position relative	
.discover-shop
	height 12.5rem
	background-color headingColor
	display flex 
	justify-content center
	-webkit-align-items center 
	align-items center 
.discover-btn
	background-color transparent
	border 1px solid #eee
	color #fff  
	display inline-block	
	height 25%	
	text-transform uppercase
	-webkit-transition all 1.5s linear 
	 -moz-transition all 1.5s linear 
	 -ms-transition all 1.5s linear 
	 -o-transition all 1.5s linear 
	 transition all 1.5s linear  
	&:hover,&:focus,&:active
		color headingColor
		background-color #FFF 
.animated-layer
	width 100%
	height 100%
	background-color #5ba58c
	opacity 0
	position absolute
	left 0
	top -100% 
	transition opacity 1.5s linear,  transform 1.5s linear	
	// display none
	visibility hidden	
	.icon-wrapper		
		justify-content center
		-webkit-align-items center 
		align-items center	
			
.subsection-vertical-small
	&:hover .animated-layer,
	&:focus .animated-layer,
	&:active .animated-layer
		display flex
		visibility visible
		opacity 0.8
		-webkit-transform translateY(100%) 
		-moz-transform translateY(100%) 
		-ms-transform translateY(100%) 
		-o-transform translateY(100%) 
		transform translateY(100%)
		justify-content: center
		-webkit-align-items center 
		align-items center 
.subsection-horizontal
	&:hover .animated-layer,
	&:focus .animated-layer,
	&:active .animated-layer
		display flex
		visibility visible
		opacity 0.8
		-webkit-transform translateY(100%) 
		-moz-transform translateY(100%) 
		-ms-transform translateY(100%) 
		-o-transform translateY(100%) 
		transform translateY(100%)
		justify-content: center
		-webkit-align-items center 
		align-items center 
	
.subsection-vertical-large
	&:hover .animated-layer,
	&:focus .animated-layer,
	&:active .animated-layer
		display flex
		visibility visible
		opacity 0.8
		-webkit-transform translateY(100%) 
		-moz-transform translateY(100%) 
		-ms-transform translateY(100%) 
		-o-transform translateY(100%) 
		transform translateY(100%)
		justify-content: center
		-webkit-align-items center 
		align-items center 		
 
/*SuBSCRIBE*/
.subscribe
	display flex
	flex-direction column
	align-items center
	justify-content center
	
.subscribe-heading
	font-family Lato-Italic
	font-style italic 
	color textColor	
.email-submit
	background-color #64c29e 	
	width 20%	
	color #fff
	text-transform uppercase
	-webkit-transition all 1.5s linear 
	 -moz-transition all 1.5s linear 
	 -ms-transition all 1.5s linear 
	 -o-transition all 1.5s linear 
	 transition all 1.5s linear  	
	&:hover,&:focus,&:active
		color headingColor 
		background-color #fff 
.email-form
	width 77%  	
	padding-left 5%
	font-style italic 
	color textColor
	&::placeholder
		color textColor

